<odoo>
    <record id="view_fuel_voucher_tree" model="ir.ui.view">
        <field name="name">tms.fuel.voucher.tree</field>
        <field name="model">tms.fuel.voucher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="amount" />
                <field name="voucher_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_fuel_voucher_form" model="ir.ui.view">
        <field name="name">tms.fuel.voucher.form</field>
        <field name="model">tms.fuel.voucher</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_draft" type="object" string="Set to Draft"
                        states="validated, cancelled" class="oe_highlight" />
                    <button name="action_validated" type="object" string="Mark as Validated"
                        states="draft" class="oe_highlight" />
                    <button name="action_cancelled" type="object" string="Cancel"
                        states="draft, validated" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="amount" />
                        <field name="voucher_date" />
                        <field name="state" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>