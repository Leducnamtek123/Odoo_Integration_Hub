<odoo>
    <record id="view_kits_tree" model="ir.ui.view">
        <field name="name">tms.kits.tree</field>
        <field name="model">tms.kits</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="quantity" />
                <field name="location" />
            </tree>
        </field>
    </record>

    <record id="view_kits_form" model="ir.ui.view">
        <field name="name">tms.kits.form</field>
        <field name="model">tms.kits</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="quantity" />
                        <field name="location" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>