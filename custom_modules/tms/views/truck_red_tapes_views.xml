<odoo>
    <record id="view_truck_red_tapes_tree" model="ir.ui.view">
        <field name="name">tms.truck.red.tapes.tree</field>
        <field name="model">tms.truck.red.tapes</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="truck_id" />
                <field name="description" />
                <field name="date_issued" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_truck_red_tapes_form" model="ir.ui.view">
        <field name="name">tms.truck.red.tapes.form</field>
        <field name="model">tms.truck.red.tapes</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_draft" type="object" string="Set to Draft"
                        states="resolved, pending" class="oe_highlight" />
                    <button name="action_resolved" type="object" string="Mark as Resolved"
                        states="draft" class="oe_highlight" />
                    <button name="action_pending" type="object" string="Mark as Pending"
                        states="draft, resolved" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="truck_id" />
                        <field name="description" />
                        <field name="date_issued" />
                        <field name="state" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>